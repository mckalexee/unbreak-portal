{
  "compilerOptions": {
    "outDir": "build/dist",
    "module": "esnext",
    "target": "es5",
    "lib": ["es6", "dom"],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "src",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true, 
    "baseUrl": ".", 
    "paths": {
      "@components/*" :["src/components/*"],
      "@styles/*" :["src/styles/*"],
      "@app/*" :["src/*"],
      "@reducers/*": ["src/reducers/*"],
      "@actions/*": ["src/actions/*"],
      "@containers/*": ["src/containers/*"],
      "@interfaces" : ["src/interfaces"]
    }
  },
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/setupTests.ts"
  ]
}
